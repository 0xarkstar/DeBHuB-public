{
  "name": "irysbase",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "contracts:deploy": "cd packages/contracts && pnpm run deploy",
    "contracts:compile": "cd packages/contracts && pnpm run build",
    "api:dev": "cd apps/api && pnpm run dev",
    "api:dev:enhanced": "cd apps/api && pnpm run dev:enhanced",
    "web:dev": "cd apps/web && pnpm run dev",
    "platform:dev": "concurrently \"pnpm run api:dev:enhanced\" \"pnpm run web:dev\"",
    "platform:build": "pnpm run build && pnpm run contracts:compile"
  },
  "devDependencies": {
    "@types/node": "^20.19.12",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2"
  }
}