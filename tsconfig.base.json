{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@debhub/shared": ["./packages/shared/src"],
      "@debhub/ai-integration": ["./packages/ai-integration/src"],
      "@debhub/irys-integration": ["./packages/irys-integration/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build"]
}