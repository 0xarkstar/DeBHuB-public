{
  "name": "@irysbase/testing",
  "version": "1.0.0",
  "description": "IrysBase Testing Suite - Integration and E2E tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@irysbase/core": "workspace:*",
    "@irysbase/shared": "workspace:*",
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.22.0",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.12",
    "typescript": "^5.9.2"
  }
}