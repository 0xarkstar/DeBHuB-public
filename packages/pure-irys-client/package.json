{
  "name": "@debhub/pure-irys-client",
  "version": "1.0.0",
  "description": "Pure Irys BaaS client library - World's first serverless blockchain-native BaaS",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "irys",
    "blockchain",
    "baas",
    "decentralized",
    "web3",
    "storage"
  ],
  "author": "DeBHuB",
  "license": "MIT",
  "dependencies": {
    "@irys/query": "^0.0.13",
    "@irys/web-upload": "^0.0.15",
    "@irys/web-upload-ethereum": "^0.0.16",
    "@irys/web-upload-ethereum-ethers-v6": "^0.0.16",
    "ethers": "^6.15.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@vitest/ui": "^1.6.0",
    "happy-dom": "^20.0.5",
    "react": "^18.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
